// Example Stylus file
// All changes are detected and automatically compiled into CSS

@import 'helpers'

// Main

body, html
  height 100%
  font-family Arial,sans-serif

body
  font normal 1em sans-serif
  vertical-gradient #eee, #fff

p
  margin-bottom 1em

a
  color #000a68

h1
  font-size 1.5em
  font-weight normal
  margin 1.5em
  color #0057c5
  text-shadow 1px 1px 2px white

#content
  padding-left 50px
  
body > header h1
  display inline-block
  width:20%
  box-sizing border-box
  margin 0
  vertical-align middle
  
body > header #userinfo
  display:inline-block
  width:80%
  box-sizing border-box
  vertical-align middle
  background-color #000000
  color #ffffff

#userinfo menu
  margin:0
  display inline-block
  
#userinfo menu button
  border none
  background-color transparent
  color #ffffff

// window
.window
  round 5px
  border 1px solid #666666
  box-shadow 2px 2px 3px #000000
  margin 0
  padding 0 0.6em
  position absolute
  background-color rgba(240,240,240,0.7)
  
.window.login
  width 20em
  
.window h1
  margin 0
  font-size 1.2em
  padding-left 1em
  color #000000
  text-shadow #ffffff
  vertical-gradient rgba(255,255,255,0.4), rgba(255,255,255,0.6)
  
.window form p
  text-align center
.window .closer
  float right
  
.error
  color:#cc0000
  
//profile
.profile form p.edit
  min-height 1em
  background-color #ddd
  padding 3px 0
.profile form input:not([type="submit"])
  width 100%
