// Example Stylus file
// All changes are detected and automatically compiled into CSS

@import 'helpers'

// Main

body, html
  height 100%
  font-family Arial,sans-serif

body
  font normal 1em sans-serif
  background-color #ffffe0

p
  margin-bottom 1em

a
  color #000a68

h1
  font-size 1.5em
  font-weight normal
  margin 1.5em
  color #0057c5
  text-shadow 1px 1px 2px white

#content
  padding-left 50px
  
body > header h1
  display inline-block
  width:20%
  box-sizing border-box
  margin 0
  vertical-align middle
  
body > header #userinfo
  display:inline-block
  width:80%
  box-sizing border-box
  vertical-align middle
  background-color #000000
  color #ffffff

#userinfo menu
  margin:0
  display inline-block
  
#userinfo menu li
  display inline-block
  
#userinfo menu button
  border none
  background-color transparent
  color #ffffff

// window
.window
  round 5px
  border 1px solid #666666
  box-shadow 2px 2px 3px #000000
  margin 0
  padding 0 0.6em
  position absolute
  background-color rgba(240,240,240,0.7)
  
.window.login
  width 20em
  
.window h1
  margin 0
  font-size 1.2em
  padding-left 1em
  color #000000
  text-shadow #ffffff
  vertical-gradient rgba(255,255,255,0.4), rgba(255,255,255,0.6)
  
.window form p
  text-align center
.window .closer
  float right
  
.error
  color:#cc0000
  
//profile
.profile form p.edit
  min-height 1em
  background-color #ddd
  padding 3px 0
.profile form input:not([type="submit"])
  width 100%
  
  
//game
card_width = 60px
card_height= 80px

.game #info, .game #screen
  display inline-block
  margin 0
  
.game #info
  width 150px
  background-color #ffffff
  vertical-align top
.game #screen
  width 600px
.game .line
  height card_height
  margin 10px 0
.game .line > div
  display inline-block
  
.game
  width 800px

.game .space,.game .cardsize
  display inline-block
  width card_width
  height card_height
  margin 0 5px
  
.dm #opp-deck,.dm #deck, .dm #opp-chojigen,.dm #chojigen
  background-color #e0ffff
.dm #opp-trash,.dm #trash
  background-color #eaeaea
.dm #opp-manas,.dm #manas
  background-color #d9ffe0
  height card_height
  width 450px
  margin 0 5px
.dm #opp-shields,.dm #shields
  background-color #e0e0ff
  height card_height
  width 450px
  margin 0 5px
.dm #opp-field,.dm #field
  background-color #ffe0e0
  height card_height
  width 520px
  margin 0 5px

.game #chat p
  margin 0
